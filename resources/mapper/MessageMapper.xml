        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.newer.pojo.message.Message">
        update message
        <set>
            <if test="command != null">
                COMMAND = #{command,jdbcType=VARCHAR},
            </if>
            <if test="description != null">
                DESCRIPTION = #{description,jdbcType=VARCHAR},
            </if>
            <if test="content != null">
                CONTENT = #{content,jdbcType=VARCHAR},
            </if>
        </set>
        where ID = #{id,jdbcType=INTEGER}
    </update>
    <update id="updateByPrimaryKey" parameterType="com.newer.pojo.message.Message">
